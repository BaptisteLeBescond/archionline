{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bookings list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Datestart</th>
                <th>Dateend</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td><a href="{{ path('booking_show', { 'id': booking.id }) }}">{{ booking.id }}</a></td>
                <td>{% if booking.dateStart %}{{ booking.dateStart|date('Y-m-d') }}{% endif %}</td>
                <td>{% if booking.dateEnd %}{{ booking.dateEnd|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('booking_show', { 'id': booking.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('booking_edit', { 'id': booking.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('booking_new') }}">Create a new booking</a>
        </li>
    </ul>
{% endblock %}
